pipeline {
    agent any


       tools {
        maven 'maven3'
    }

    stages {
      stage('checkout') {
            steps {
                echo 'Cloning GIT HUB Repo '
				git branch: 'master', url: 'https://github.com/Chinthammanoj/SamplePipeline.git'
            }  
        }
		
		
		
	 stage('sonar') {
            steps {
                echo 'scanning project'
               withCredentials([string(credentialsId: 'sonartoken', variable: 'SONAR_TOKEN')]) {
                    bat "mvn clean verify sonar:sonar -Dsonar.projectKey=SamplePipeline -Dsonar.host.url=%SONAR_URL% -Dsonar.login=%SONAR_TOKEN%"'''
            }
    	}
		
		
		
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
				bat 'mvn clean package'
            }
        }
		
		
		
        stage('Docker Image') {
            steps {
                echo 'Docker Image building'
				bat 'docker build -t manojkumar1212/mydocker:${BUILD_NUMBER} .'
            }
        }
		
		
       stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) 
			{
            bat 'docker login -u manojkumar1212 -p ${dockerhub}'
			
			 }
			   bat 'docker push manojkumar1212/mydocker:${BUILD_NUMBER}'
			   
           
				}
				
            }
        }
		
		
    stage('Update Deployment File') {
		
		 environment {
            GIT_REPO_NAME = "SamplePipeline"
            GIT_USER_NAME = "Chinthammanoj"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) 
				{
                  bat '''
                    git config user.email "chinthammanojkumar@gmail.com"
                    git config user.name "Manoj"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/mydocker:.*/mydocker:${BUILD_NUMBER}/g" deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${githubtoken}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}






