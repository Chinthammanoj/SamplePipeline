pipeline {
    agent any
 environment {
        IMAGE_NAME = "manojkumar1212/batch13:${BUILD_NUMBER}"
    }

       tools {
        maven 'maven3'
    }

    stages {
      stage('checkout') {
            steps {
                echo 'Cloning GIT HUB Repo '
				git branch: 'master', url: 'https://github.com/Chinthammanoj/SamplePipeline.git'
            }  
        }
		
		
		
	 stage('sonar') {
    steps {
        withCredentials([string(credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN')]) {
            echo 'scanning project'
            bat "mvn sonar:sonar -Dsonar.login=%SONAR_TOKEN%"
}
            }
    	}
		
		
		
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
				bat 'mvn clean package'
            }
        }
		
        stage('Build Docker Image') {
            steps {
                bat "docker build -t manojkumar1212/batch13:%BUILD_NUMBER% ."
            }
        }
		
		
       stage('Docker Login and Push') {
            steps {
                 withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    bat "echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin"
                    bat "docker push %IMAGE_NAME%"
                }
            }
        }
		
		
    stage('Update deployment.yml') {
		
		 environment {
            GIT_REPO_NAME = "SamplePipeline"
            GIT_USER_NAME = "Chinthammanoj"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) 
				{
                  bat '''
                    git config user.email "chinthammanojkumar@gmail.com"
                    git config user.name "Manoj"
                    set BUILD_NUMBER=%BUILD_NUMBER%
                    bat """
powershell -Command "(Get-Content deployment.yml) -replace 'batch13:.*', 'batch13:%BUILD_NUMBER%' | Set-Content deployment.yml"
"""

                    git add .
                    
                    git commit -m "Update deployment image to version %BUILD_NUMBER%"
                   git push https://%GITHUB_TOKEN%@github.com/YourUsername/YourRepo.git HEAD:main
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}





















